<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">

	<script type="text/javascript">
		$(document).ready(function(){

			$( "#form" ).submit(function(event) {
				event.preventDefault();

				$.ajax({
					type: 'POST',
					url: '/addCourse',
					data: $('#form').serialize(),
					dataType: "json",
					success: function(response){
						//alert("a");
						//console.log(response.Success);
						$('#form')[0].reset();

						document.getElementById("check").innerHTML=response.Success;
         					//ADD THIS CODE
         					setTimeout(function(){
         						document.getElementById("check").innerHTML="";
         					},3000);
         					if (response.Success=="Success!") {
         						document.getElementById("aa").click();
         					};
         				},
         				error: function() {
         				}
         			})
			});

		});
	</script>
</head>
<body>
	<div class="col-md-4 col-md-offset-4">
		<div>
			<p>Add Course For Attendence</p>
		</div>
		<div class="form-group">
			<form id="form" method="post" >
				<input type="text" name="course" placeholder="Course ID" required="" class="form-control"><br/>
                <input type="text" name="date" placeholder="DD/MM/YY" required="" class="form-control"><br/>
                <input type="text" name="dname" placeholder="Device Name" required="" class="form-control"><br/>
                <input type="text" name="uuid" placeholder="UUID" required="" class="form-control"><br/>
                <input type="text" name="payload" placeholder="payload" required="" class="form-control"><br/>
				<input type="submit" value="Add Course" class="btn btn-success">
			</form>
		</div>
		<div class="mssg bg-danger">
			<span id="check"></span>
		</div>
		<div>
			<span>Already Registered! <a href="/login">Login</a></span>
		</div>
		<div id="LangTable"><a href="/addCourse" id="aa"></a>
		</div>
		
	</div>
</body>
</html>